// Place your key bindings in this file to override the defaults
[
  {
    "key": "tab",
    "command": "selectNextSuggestion",
    "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus || suggestWidgetVisible && textInputFocus && !suggestWidgetHasFocusedSuggestion"
  },
  // {
  //   "key": "",
  //   "command": "selectFirstSuggestion",
  //   "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
  // },
  {
    "key": "shift+tab",
    "command": "selectPrevSuggestion",
    "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus || suggestWidgetVisible && textInputFocus && !suggestWidgetHasFocusedSuggestion"
  },
  {
    "key": "ctrl+alt+shift+d",
    "command": "editor.action.addSelectionToPreviousFindMatch",
    "when": "editorTextFocus || editorFocus"
  },
  {
    "key": "ctrl+alt+d",
    "command": "editor.action.addSelectionToNextFindMatch",
    "when": "editorTextFocus || editorFocus"
  },
  {
    "key": ";",
    "command": "editor.action.moveSelectionToNextFindMatch",
    "when": "editorTextFocus && vim.mode =='Visual'"
  },
  {
    "key": ",",
    "command": "editor.action.moveSelectionToPreviousFindMatch",
    "when": "editorTextFocus && vim.mode =='Visual'"
  },
  {
    "key": "alt+n",
    "command": "workbench.action.nextEditor",
    "when": "!editorIsOpenInNextGroup && !editorIsOpenInPreviousGroup && !multipleEditorGroups"
  },
  {
    "key": "alt+shift+n",
    "command": "workbench.action.previousEditor",
    "when": "!editorIsOpenInNextGroup && !editorIsOpenInPreviousGroup && !multipleEditorGroups"
  },
  {
    "key": "ctrl+b",
    "command": "workbench.action.focusSideBar",
    "when": "editorFocus && vim.active"
  },
  {
    "key": "ctrl+h",
    "command": "workbench.action.focusLeftGroup",
    "when": "editorTextFocus && vim.active && !inDebugRepl"
  },
  {
    "key": "ctrl+j",
    "command": "workbench.action.focusBelowGroup",
    "when": "editorTextFocus && vim.active && !inDebugRepl"
  },
  {
    "key": "ctrl+k",
    "command": "workbench.action.focusAboveGroup",
    "when": "editorTextFocus && vim.active && !inDebugRepl"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.focusRightGroup",
    "when": "editorTextFocus && vim.active && !inDebugRepl"
  },
  {
    "key": "enter",
    "command": "acceptSelectedSuggestion",
    "when": "suggestWidgetHasFocusedSuggestion && suggestWidgetVisible && textInputFocus"
  },
  {
    // pasar al siguiente snippet
    "key": ";",
    "command": "jumpToNextSnippetPlaceholder",
    "when": "editorTextFocus && hasNextTabstop && inSnippetMode"
  },
  {
    "key": ",",
    "command": "jumpToPrevSnippetPlaceholder",
    "when": "editorTextFocus && hasNextTabstop && inSnippetMode"
  },
  {
    "key": "ctrl+x",
    "command": "workbench.action.closeGroup",
    "when": "activeEditorGroupEmpty && multipleEditorGroups"
  },
  {
    "key": "ctrl+x",
    "command": "workbench.action.closeActiveEditor"
  },
  {
    "key": "tab",
    "command": "-jumpToNextSnippetPlaceholder &&",
    "when": "editorTextFocus && hasNextTabstop && inSnippetMode"
  }
  // {
  //   "key": "down",
  //   "command": "selectNextSuggestion"
  // }
]
